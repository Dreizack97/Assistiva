@model AppUI.Models.User.SignInModel
@{
	ViewData["Title"] = "Inicio de sesión";
	Layout = null;
}
<!DOCTYPE html>
<html lang="es-mx">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE-edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximun-scale=5.0 shrink-to-fit=no" />
	<meta name="description" content="Plataforma inclusiva para aprender matemáticas diseñada para personas con discapacidad visual, auditiva o motora. Ofrecemos recursos adaptados,
		herramientas accesibles y lecciones interactivas para facilitar el aprendizaje de matemáticas de manera efectiva y accesible para todos." />
	<meta name="keywords" content="matemáticas accesibles, aprender matemáticas, discapacidad visual, discapacidad auditiva, discapacidad motora, educación inclusiva, recursos adaptados,
		herramientas accesibles, lecciones interactivas, enseñanza inclusiva, matemáticas para todos, aprendizaje adaptativo, educación especial, matemáticas inclusivas" />
	<meta name="author" content="Jorge Eduardo Silva Prieto, Jorge Andrés González Hernández" />
	<title>@ViewData["Title"]</title>
	<link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<link href="~/vendor/fontawesome/css/all.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
	<partial name="_Notification" />
	<section class="h-100">
		<div class="container h-100">
			<div class="row justify-content-sm-center h-100">
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
					<div class="text-center my-5">
						<img src="~/img/Logo.png" alt="Logo Assistiva">
					</div>
					<div class="card shadow-lg">
						<div class="card-body p-5">
							<h1 class="fs-4 card-title fw-bold mb-4">Iniciar sesión</h1>
							<form method="post" asp-controller="SignIn" asp-action="SignIn">
								<div class="mb-3">
									<label asp-for="@Model.Username" class="mb-2 text-muted"></label>
									<div class="input-group">
										<span class="input-group-text"><i class="fas fa-user"></i></span>
										<input asp-for="@Model.Username" class="form-control" required autofocus />
									</div>
									<span asp-validation-for="@Model.Username" class="small text-danger"></span>
								</div>
								<div class="mb-3">
									<label asp-for="@Model.Password" class="mb-2 text-muted"></label>
									<div class="input-group">
										<span class="input-group-text"><i class="fas fa-key"></i></span>
										<input asp-for="@Model.Password" class="form-control" required />
									</div>
									<span asp-validation-for="@Model.Password" class="small text-danger"></span>
								</div>
								<div class="text-center">
									<button type="submit" class="btn btn-primary">Iniciar sesión</button>
								</div>
							</form>
						</div>
						<div class="card-footer py-3 border-0">
							<div class="text-center">
								¿Olvidaste tu contraseña? <a asp-controller="SignIn" asp-action="ForgotPassword" class="text-dark">Presiona aquí</a>
							</div>
						</div>
					</div>
					<div class="text-center mt-5 text-muted">
						Copyright &copy; 2024 - @DateTime.Now.Year &mdash; J&J Software
					</div>
				</div>
			</div>
		</div>
	</section>
	<script src="~/vendor/jquery/jquery.min.js"></script>
	<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
	<partial name="_ValidationScriptsPartial" />
</body>
</html>